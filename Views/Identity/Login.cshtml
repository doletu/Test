
@model MVC.Data.Model.LoginModel
@{ Layout = "~/Views/Shared/Admin/_LoginLayout.cshtml";
                ViewData["Title"] = "ĐĂNG NHẬP";
}
<div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <form class="user" id="account" method="post">
                <div class="form-group">

                    <input asp-for="@Model.UserNameOrEmail" class="form-control form-control-user"
                           aria-describedby="emailHelp" placeholder="Nhập user hoặc email" />
                    <span asp-validation-for="@Model.UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-user" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input asp-for="RememberMe" class="custom-control-input" />
                        <label class="custom-control-label" asp-for="RememberMe"></label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>

            </form>


            <div class="text-center">
                <a class="small" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Chưa có tài khoản, đăng ký mới</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

