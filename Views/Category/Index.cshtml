@model IEnumerable<MVC.Models.Category>

@{
    ViewData["Title"] = "Danh sách các chuyên mục Blog";
    Layout = "_Layout";
    ViewData["ActivePage"] = ManageNavPages.Category;
    //Layout = "~/Views/Shared/Admin/Manage/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Tạo chuyên mục mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() > 0)
            @await Component.InvokeAsync("RowTreeCategory", new { categories = Model, level = 0 })
    </tbody>
</table>
